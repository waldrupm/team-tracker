<div class="w-1/3">
  <%= form_with(model: team, class: "contents") do |form| %>
    <% if team.errors.any? %>
      <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
        <h2><%= pluralize(team.errors.count, "error") %> prohibited this team from being saved:</h2>
        <ul>
          <% team.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="my-5">
      <%= form.label :name %>
      <%= form.text_field :name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>
    <div class="my-5">
      <%= form.label :last_year_finish %>
      <%= form.number_field :last_year_finish, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>
    <div class="my-5">
      <%= form.label :pro, "Pro Team" %>
      <%= form.check_box :pro, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2" %>
    </div>
    <div class="inline">
      <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer bg-indigo-600" %>
    </div>
  <% end %>
</div>
